.container
	.well
		form.form-horizontal(name="profileForm")
			fieldset
				legend User Profile
				.form-group
					label.col-md-2.control-label(for="email") Email
					.col-md-10
						input.form-control(type="email", name="email", placeholder="Email", ng-model="email", required)
				.form-group
					label.col-md-2.control-label(for="firstName") First Name
					.col-md-10
						input.form-control(type="firstName", name="firstName", placeholder="First Name", ng-model="fname", required)
				.form-group
					label.col-md-2.control-label(for="lastName") Last Name
					.col-md-10
						input.form-control(type="lastName", name="lastName", placeholder="Last Name", ng-model="lname", required)
				.form-group
					label.col-md-2.control-label(for="password") Password
					.col-md-10
						input.form-control(type="password", name="password", placeholder="Password", ng-model="password")
				.form-group
					.col-md-10.col-md-offset-2
						.pull-right
							button.btn.btn-primary(ng-click="update()", ng-disabled="profileForm.$invalid") Submit
							| &nbsp;
							a.btn.btn-defualt(href="/") Cancel